import java.util.Scanner; //  The Scanner class is imported to read user input
public class Average {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);  // creat a scanner object to read user inputs

        System.out.println("Please  enter  4 numbers:"); //  Prompt the user for input 

        double num1 = scanner.nextDouble();

        double num2 = scanner.nextDouble();

        double num3 = scanner.nextDouble();

        double num4 = scanner.nextDouble();

         // Initialize variables to hold the number 

        double average = (num1 + num2 + num3 + num4) / 4; // Calculate the average by summing the four numbers and dividing by 4

        System.out.println("The average is: " + average); // Display the result

        scanner.close();  // Close the scanner to prevent resource leaks.
    }
}
